<div class="col-md-6 col-md-offset-3">
	<div class="text-center">
		<h3>Edit Your Todoitem</h3><br>
		<%= form_for @todolistedit, html: {class: 'form-horizontal'} do |t| %>
			<div class="form-group">
				<%= t.label :todoitems, "Todoitems:",  class: "col-sm-4	control-label" %>
				<div class="col-sm-6">
			    	<%= t.text_field :todoitems, class: "form-control" %>
				</div>
			</div>

		    <div class="form-group">
				<%= t.label :start, "Start Date:",  class: "col-sm-4 control-label" %>
				<div class="col-sm-6">
			    	<%= t.text_field :start, class: "form-control", id: "datepicker" %>
				</div>
			</div>

			<div class="form-group">
				<%= t.label :end, "End Date:",  class: "col-sm-4 control-label" %>
				<div class="col-sm-6">
			    	<%= t.text_field :end, class: "form-control", id: "datepicker2" %>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-offset-1 col-sm-10">
					<%= t.submit :submit, class: "btn btn-default" %>
				</div>
			</div>
		<% end %>
		<br>
		<%= link_to "Back", todolists_path %>
	</div>
</div>