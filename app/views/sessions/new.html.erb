<div class="col-md-6 col-md-offset-3">
	<div class="text-center">
		<h1>Login</h1>
	</div><br>
	<%= form_for :session, url: login_path, html: {class: 'form-horizontal'} do |t| %>
		<div class="form-group">
			<%= t.label :account_name, "Account Name:",  class: "col-sm-4	 control-label" %>
			<div class="col-sm-6">
		    	<%= t.text_field :account_name, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<%= t.label :password, "Password:",  class: "col-sm-4	 control-label" %>
			<div class="col-sm-6">
		    	<%= t.password_field :password, class: "form-control" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-5 col-sm-10">
				<%= t.submit :submit, class: "btn btn-default" %>
			</div>
		</div>
	<% end %>
</div>